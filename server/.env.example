# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/kerala-hse-platform

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-here

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
